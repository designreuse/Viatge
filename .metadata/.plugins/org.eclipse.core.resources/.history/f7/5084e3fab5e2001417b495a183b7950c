            <div><input type="email" class="input01" name="email" placeholder="Seu E-mail_"></div>
            <div><button type="submit" name="cadastrar" class="btn bg-thema submit01">VER DESTINOS</button></div>
        </form>
        
        <a href="destino-perfeito.php" class="fechar"></a>
    </div>
    
    <? }; ?>
    <!-- CADASTRO APÓS FILTRAGEM DE DESTINO PERFEITO -->
    
    <!-- ALERT DE ORÇAMENTO ENVIADO -->
    <?php
		$alert_get = $_GET['alert'];
    	if($alert_get == 'orcamento'){
	?>
    
    <div class="bg-alert"></div>
    <div class="alert-orcamento">
