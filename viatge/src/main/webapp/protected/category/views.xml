<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration
3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<!-- Lista as categorias da agencia -->
	<definition extends="default" name="category/categoryList">
		<put-attribute name="body" value="/protected/category/categoryList.jsp" />
	</definition>

	<!-- Adiciona uma nova categoria -->
	<definition extends="default" name="category/newCategory">
		<put-attribute name="body" value="/protected/category/newCategory.jsp" />
	</definition>
	
	<!-- Atualiza a categoria -->
	<definition extends="default" name="category/updateCategory">
		<put-attribute name="body" value="/protected/category/editCategory.jsp" />
	</definition>
	
</tiles-definitions>